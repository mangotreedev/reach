<div class="choices mx-auto w-full sm:w-2/3 md:w-1/2 lg:w-2/5 py-12 relative">
  <%= inline_svg_tag "gradient_triangle.svg", class: "gradient-triangle" %>
  <%= inline_svg_tag "gradient_squiggles.svg", class: "gradient-squiggles" %>
  <div class="relative">
    <div class='cropper' data-controller="cropper" data-cropper-survey-id="<%= @survey.id %>">
          <button
        data-action="click->cropper#addChoice"
        class='btn btn-gradient focus:outline-none w-full mb-4 z-10'>
          Add Choice
      </button>
      <%= cl_image_tag @survey.photo.key, id: 'js-crop-image', class: 'cropper__image', crop: :fill, data: { 'cropper-target': 'image'}, format: :jpg %>

    </div>
  </div>

  <div class="pending-choices mt-4 mb-4 glass-card p-4">
    <h3 class="text-white mt-0 text-shadow--light">Pending Choices</h3>
    <div class="choices__container">
      <% @survey.choices.each do |choice| %>
        <%= render 'choices/pending', choice: choice %>
      <% end %>
    </div>
    <%= link_to "Publish Photo for Rating",
    survey_publication_path(@survey),
    method: :post,
    class: 'btn btn-gradient focus:outline-none w-full mt-4'  %>
  </div>
</div>





