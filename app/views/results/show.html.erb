
<div class="flex survey">
  <div class="survey__photo">
    <h1 class="text-6xl font-bold">Who's the reacher</h1>
    <%= cl_image_tag @survey.photo.key, height: 500, width: 700, crop: :fill, format: :jpg %>
    <%= render 'shared/share_btn', survey: @survey  %>
  </div>

  <div class="survey__choices">
    <h1 class="text-6xl font-bold">The Results</h1>
    <div class="choices">
      <% @survey.choices.each do |choice| %>
        <%= render 'choices/result', choice: choice %>
      <% end %>
    </div>
  </div>
</div>

<%= link_to "Next", root_path, class: 'px-12 py-3 bg-yellow-400  text-white rounded border border-yellow-400 inline-block
    hover:bg-yellow-300 hover:border-yellow-300 focus:outline-none
    transition duration-300' %>

