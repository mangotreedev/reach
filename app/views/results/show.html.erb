<div class="survey mx-auto w-full sm:w-2/3 md:w-1/2 lg:w-2/5 py-12 relative">
  <%= inline_svg_tag "gradient_triangle.svg", class: "gradient-triangle" %>
  <%= inline_svg_tag "gradient_squiggles.svg", class: "gradient-squiggles" %>
  <div class="survey__photo relative">
    <%= cl_image_tag @survey.photo.key, height: 500, width: 700, crop: :fill, format: :jpg, class: 'rounded-sm' %>
    <div class="survey__options-block absolute bottom-2 right-3 flex">
      <%= render 'shared/share_btn', survey: @survey %>
    </div>
  </div>

  <div class="survey__choices">
    <h1 class="text-6xl font-bold">The Results</h1>
    <div class="choices">
      <% @survey.choices.each do |choice| %>
        <%= render 'choices/result', choice: choice %>
      <% end %>
    </div>
  </div>
</div>

<%= link_to "Next", root_path, class: 'px-12 py-3 bg-yellow-400  text-white rounded border border-yellow-400 inline-block
    hover:bg-yellow-300 hover:border-yellow-300 focus:outline-none
    transition duration-300' %>

