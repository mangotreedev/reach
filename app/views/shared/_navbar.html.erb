<div class="sticky-wrapper js-nav-scroll <%= yield :background %>">
  <nav class="nav flex flex-wrap items-center justify-between px-6 py-2 w-full">
    <%= link_to root_path do %>
      <h4 class="text-gradient--blue text-shadow--light">Reach</h4>
    <% end %>
    <input class="menu-btn hidden" type="checkbox" id="menu-btn">
    <label class="menu-icon block cursor-pointer md:hidden px-2 py-4 relative select-none" for="menu-btn">
      <span class="navicon bg-grey-darkest flex items-center relative"></span>
    </label>
    <ul class="menu border-t md:border-none flex justify-end list-reset m-0 w-full md:w-auto">
      <li class="">
        <%= link_to "Random", root_path, class: "block md:inline-block sm:px-4 py-3 no-underline  text-gradient--blue"  %>
      </li>
      <li class="">
        <%= link_to "Gallery", surveys_path, class: "block md:inline-block sm:px-4 py-3 no-underline  text-gradient--blue"  %>
      </li>
      <li class="">
        <%= link_to "About", about_path, class: "block md:inline-block sm:px-4 py-3 no-underline  text-gradient--blue", data: { turbolinks: false }  %>
      </li>
      <% if user_signed_in? %>
        <li class="">
          <%= link_to "Add a Photo", new_survey_path, class: "block md:inline-block sm:px-4 py-3 no-underline text-gradient--blue"  %>
        </li>
        <li class="">
          <%= link_to "Dashboard", user_dashboard_path, class: "block md:inline-block sm:px-4 py-3 no-underline text-gradient--blue"  %>
        </li>
        <% if policy('Admin::Dashboard'.to_sym).show? %>
          <li class="">
            <%= link_to "Admin", admin_dashboard_path, class: "block md:inline-block sm:px-4 py-3 no-underline text-gradient--blue"  %>
          </li>
        <% end %>
        <li class="">
          <%= link_to "Log Out", destroy_user_session_path, method: :delete, class: "block md:inline-block sm:px-4 py-3 no-underline text-gradient--blue"  %>
        </li>
      <% else %>
        <li class="">
          <%= link_to "Log In", new_user_session_path, class: "block md:inline-block sm:px-4 py-3 no-underline text-gradient--blue" %>
        </li>
      <% end %>
    </ul>
  </nav>
</div>

