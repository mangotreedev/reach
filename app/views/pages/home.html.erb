<% if @survey %>
  <%= render 'shared/survey_card', survey: @survey %>
<% else %>
  <div class="survey mx-auto w-full sm:w-2/3 md:w-1/2 lg:w-2/5 py-12 relative">
    <%= inline_svg_tag "gradient_triangle.svg", class: "gradient-triangle" %>
    <%= inline_svg_tag "gradient_squiggles.svg", class: "gradient-squiggles" %>
    <div class="survey__photo relative">
      <%= image_tag 'works__photo_one.jpeg', alt: 'Confused', class: 'polaroid-border'%>
    </div>
    <div class="survey__choices mt-12 mb-4 glass-card p-4">
      <h3 class="text-white mt-0 text-shadow--light">You've voted on everything!</h3>
      <%= link_to 'Visit The Gallery', surveys_path, class: 'btn btn-gradient focus:outline-none w-full mt-4' %>
    </div>
  </div>
<% end %>
