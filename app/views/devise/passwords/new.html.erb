<p class="text-gradient--blue mb-4">YOU STUPID IDIOT</p>
<h3 class="text-black mb-4 font-normal">Well well well...</h3>
<p class="text-sm text-gray-400 mb-8">And here Karl said no one would be dumb enough to forget their password, well you certainly proved them wrong didn't you.</p>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email,
                required: true,
                autofocus: true,
                label: false,
                placeholder: 'Email address',
                input_html: { autocomplete: "email" },
                wrapper_html: { class: 'mb-2'} %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Send reset instructions", class: 'btn btn-gradient focus:outline-none w-full' %>
  </div>
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <p class="text-sm text-gray-400 mt-4">Don't have an account? <%= link_to "Sign up", new_registration_path(resource_name), class: 'text-gradient--blue' %></p>
<% end %>
